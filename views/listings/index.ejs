<% layout('layouts/boilerplate') %>
<style>
    #filters{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }
    .filter{
        text-align: center;
        margin-top: 2rem;
        margin-right: 3rem;
        opacity: 0.7;
    }
    .filter:hover{
        opacity: 1;
    }
    .filter p {
        font-size: 0.8rem;
    }
    .tax-info{
        display: none;
    }
    .tax-toggle{
        border: 1px solid black;
        border-radius: 1rem;
        height: 3.5rem;
        padding: 1rem;
        margin-left: 5rem;
        display: flex;
        align-items: center;
        


    }
</style>
    <body>
        <div id="filters">
