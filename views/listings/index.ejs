         <div class="tax-toggle">       
              <div class="form-check form-switch form-check-reverse checkbtn">
  <input class="form-check-input" type="checkbox" id="switchCheckReverse">
  <label class="form-check-label" for="switchCheckReverse">Display total after taxes</label>
  </div>

</div>
        </div>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
            <% for(let listing of allListings){ %>
                <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="listing-card col" >
                     <!-- <div class="card-img-overlay"></div> -->
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_images" style="height: 20rem;">
                    <div class="card-body">
                        <p class="card-text"><b><%= listing.title %></b><br>
                            &#8377;<%=listing.price.toLocaleString("en-NI") %>/night
                            <i class="tax-info">+18% GST</i>
                        </p>
                    </div>
                </div>
             </a>
                <%}%>
        </div>
